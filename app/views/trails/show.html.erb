<%=@trail.name%><br>
<%=@trail.city%>, <%=@trail.state%>, <%=@trail.country%><br>
<%=@trail.length%><br>
<%=@trail.rating%><br>
<%=@trail.description%>

<h1>Reviews</h1>
  <ul>
    <%@trail.reviews.each do |review|%>
    <li><%=review.title%></li>
    <%end%>
  </ul>

<%=form_for([@trail, @trail.reviews.build]) do |f|%>

  <p>
    <%= f.label :rating%>:<br>
    <%= f.text_field :rating%>
  </p>

  <p>
    <%= f.label :content%>:<br>
    <%= f.text_area :content%>
  </p>

  <p>
    <%=f.submit%>
  </p>
<%end%>