<%= form_for @trail, url: {action: "create"} do |f| %>

  <% if @trail.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@trail.errors.count, "error") %> prohibited
        this trail from being saved:
      </h2>
      <ul>
        <% @trail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :trail_name%>
  <%= f.text_field :name %>

  <%= f.label :Location%>
  <%= f.text_field :city, :placeholder => "City" %>
  <%= f.text_field :state, :placeholder => "State" %>
  <%= f.text_field :country, :placeholder => "Country" %>

  <%= f.label :rating%>
  <%= f.text_field :rating %>

  <%= f.label :activity_type%>
  <%= f.text_field :activity_type %>

  <%= f.label :description%>
  <%= f.text_area :description%>

  <%= f.submit "Create Trail" %>
<% end %>